<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "fr.univ-lr.AppResto"
        version     = "1.0.0" >

    <!-- point d'entree necessaire si plusieurs fichiers -->
	<content src="index.html" />
    <access origin="*" />
	
	<preference name="android-minSdkVersion"      value="14" />
	<preference name="phonegap-version" value="cli-6.5.0" />
	
	<name>AppRestoCoCo</name>
		
	<description>
        Une application avec les restaurants universitaires de La Rochelle. 
    </description>

    <author href="http://www.univ-lr.fr" email="gwladys.sette@lp-miaw.fr">
Gwladys SETTE    </author>
		
    <!-- Support for Cordova 5.0.0 plugin system -->
  <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
    <plugin name="cordova-plugin-geolocation" version ="1" />

	<platform name="android">
    <icon src="res/icons/android/icon-36-ldpi.png" density="ldpi" />
    <icon src="res/icons/android/icon-48-mdpi.png" density="mdpi" />
    <icon src="res/icons/android/icon-72-hdpi.png" density="hdpi" />
    <icon src="res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
   </platform>

</widget>
 
